@model WizrrWeb.Models.EmployeeManagement.Emp_DisciplinaryDetailsModel

<form role="form">
    <div class="col-lg-12" style="margin-right:60px;">
        <div class="form-group">
            <label for="Description">Description</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "Description", @required = "" } })
        </div>
        <div class="form-group">
            <label for="Action_on">Action On</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                    </div>
                </div>
                @Html.EditorFor(model => model.ActionOn, new { htmlAttributes = new { @class = "form-control", @id = "txt_Displinary_date", @required = "" } })
            </div>
        </div>
    </div>
</form>
