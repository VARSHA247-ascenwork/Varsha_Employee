@model IEnumerable<WizrrWeb.Models.EmployeeManagement.Emp_ReferenceDetailsModel>

    <div class="col-xl-12">
        <div class="table-responsive">
            <table class="tables" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">Person</th>
                        <th scope="col">Company</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Designation</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row" data-label="Person">@item.Person</td>
                                <td data-label="Company">@item.Company</td>
                                <td data-label="Email">@item.Email</td>
                                <td data-label="Phone">@item.Phone</td>
                                <td data-label="Designation">@item.Designation</td>
                                <td data-label="Action">
                                    <div class="btn-icon-list center">
                                        <button class="btn" style="padding:0px 5px 0px 5px;margin:0px;" onclick="EditReference(@item.ID)"><i class="si si-pencil text-primary mr-2" data-toggle="tooltip" title="" data-placement="top" data-original-title="Edit"></i></button>
                                        <button class="btn" style="padding:0px 5px 0px 5px;margin:0px;" onclick="ReferenceDetails(@item.ID)"><i class="si si-eye text-success mr-2" data-toggle="tooltip" title="" data-placement="top" data-original-title="View"></i></button>
                                        <button class="btn" style="padding:0px;margin:0px;" onclick="DeleteReferenceDetails(@item.ID)"><i class="si si-trash text-danger mr-2" data-toggle="tooltip" title="" data-placement="top" data-original-title="Delete"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>