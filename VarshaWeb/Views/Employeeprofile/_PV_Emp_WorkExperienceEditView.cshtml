@model WizrrWeb.Models.EmployeeManagement.Emp_WorkExperienceModel

<form id="work">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Organazation_name">Organisation Name</label>
                @Html.EditorFor(model => model.OrganizationName, new { htmlAttributes = new { @class = "form-control", @id = "Organazation_name",@required="" } })

            </div>
            <div class="form-group">
                <label for="Designation">Designation</label>
                @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", id = "Designation", @required = "" } })
            </div>
            <div class="form-group">
                <label for="From_Date">From Date</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control", @id = "txtfromdate" } })
                    
                </div>
            </div><div class="form-group">
                <label for="From_Date">To Date</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control", @id = "To_Date" } })
                </div>
            </div>

        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Industry">Industry</label><div class="form-group">
                    <select id="ddlIndustry" style="width:100%" class="form-control">
                        <option value="IT">IT</option>

                    </select>
                </div>

            </div>
            <div class="form-group">
                <label for="Annual_Salary">Annual Salary</label>
                @Html.EditorFor(model => model.AnnualSalary, new { htmlAttributes = new { @class = "form-control", @id = "txtAnnual_Salary", @required = "" } })
            </div>
            <div class="form-group">
                <label for="Contact_no">Contact No</label>
                @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control", @id = "txtContact", @required = "" } })
            </div>
            <div class="form-group">
                <label for="To">Notes</label>
                <div >
                @*@Html.TextAreaFor(model=>model.Notes, new { htmlAttributes = new { @class = "form-control", @id = "txtWorkNotes", @required = "" } })*@
                    <textarea type="text" placeholder="Notes" id="txtWorkNotes" value="" class="form-control" row="2">@Model.Notes</textarea>
                    </div>
            </div>
        </div>
    </div>
</form>

  


