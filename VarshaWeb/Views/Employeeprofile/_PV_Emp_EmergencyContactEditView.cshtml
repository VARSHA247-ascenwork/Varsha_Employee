@model WizrrWeb.Models.EmployeeManagement.Emp_EmergencyContactModel



<form role="form">
    <div class="form-group">
        <label for="Person Name">Person Name</label>
        @Html.EditorFor(model => model.PersonName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Person Name", @id = "txtEMRPersonname" } })
    </div>
    <div class="form-group">
        <label for="Relationship">Relationship</label>
        <div class="form-group">
            @Html.DropDownListFor(model => model.Relationship, new List<SelectListItem>{
                      new SelectListItem{ Text="Father", Value="Father"},
                      new SelectListItem{ Text="Mother", Value="Mother"},
                      new SelectListItem{ Text="Brother", Value="Brother"},
                      new SelectListItem{ Text="Sister", Value="Sister"},
                      new SelectListItem{ Text="Friend", Value="Friend"},
                      new SelectListItem{ Text="Other", Value="Other"}
                  }, "Choose One", new { @class = "form-control select2", @id = "ddlRelationship" })
        </div>
    </div>
    <div class="form-group">
        <label for="Primary_Phone">Primary Phone</label>
        @Html.EditorFor(model => model.PrimaryPhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Primary Phone", @id = "txtPrimary_Phone" } })
    </div>
    <div class="form-group">
        <label for="Alternate Phone Number">Alternate Phone Number</label>
        @Html.EditorFor(model => model.AlternatePhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Alternate Phone Number", @id = "txtAlternate_Phone" } })
    </div>
    <div class="form-group">
        <label for="Address in Detail">Address in Detail</label>
        <textarea type="text" placeholder="Address in Detail" id="txtAddress_in_Detail" class="form-control" row="2">@Model.Address</textarea>
    </div>
</form>