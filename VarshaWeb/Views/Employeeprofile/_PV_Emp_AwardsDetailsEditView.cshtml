@model WizrrWeb.Models.EmployeeManagement.Emp_AwardsDetailsModel



<form role="form">
    <div class="col-lg-12" style="margin-right:60px;">
        <div class="form-group">
            <label for="Award">Award</label>
            @Html.EditorFor(model => model.Award, new { htmlAttributes = new { @class = "form-control", @id = "Award" } })

        </div>
        <div class="form-group">
            <label for="Awarded_By">Awarded By</label>
            @Html.EditorFor(model => model.AwardedBy, new { htmlAttributes = new { @class = "form-control", @id = "txtAwarded_By" } })
        </div>
        <div class="form-group">
            <label for="Awarded_on">Awarded On</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                    </div>
                </div>
                @Html.EditorFor(model => model.AwardedOn, new { htmlAttributes = new { @class = "form-control", @id = "txtAwarded_on" } })
            </div>
        </div><div class="form-group">
            <label for="Description">Description</label>
            <textarea type="text" placeholder="Description" id="Description" class="form-control" row="2">@Model.Description</textarea>
        </div>
    </div>
</form>