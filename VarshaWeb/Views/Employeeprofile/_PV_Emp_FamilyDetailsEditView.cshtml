@model WizrrWeb.Models.EmployeeManagement.Emp_FamilyDetailsModel

<form role="form">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Person Name">Person Name</label>
                @Html.EditorFor(model => model.PersonName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Person Name", @id = "txtFamilyPersonname" } })
            </div>
            <div class="form-group">
                <label for="Relationship">Relationship</label>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.Relationship, new List<SelectListItem>{
                         new SelectListItem{ Text="Father", Value="Father"},
                         new SelectListItem{ Text="Mother", Value="Mother"},
                         new SelectListItem{ Text="Brother", Value="Brother"},
                         new SelectListItem{ Text="Sister", Value="Sister"},
                         new SelectListItem{ Text="Other", Value="Other"}
                     }, "Choose One", new { @class = "form-control select2", @id = "ddlRelationship" })
                </div>
            </div>
            <div class="form-group">

                <label for="BirthDate">Date Of Birth</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", @id = "txtBirthDate", @placeholder = "DD/MM/YYYY" } })
                </div>
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "Age", @id = "txtAge" } })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Gender">Gender</label>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>{
                             new SelectListItem{ Text="Male", Value="Male"},
                             new SelectListItem{ Text="Female", Value="Female"}
                         }, "Choose One", new { @class = "form-control select2", @id = "ddlgender" })
                </div>
            </div>
            <div class="form-group">
                <label for="Mediclaim_Covered">Mediclaim Covered</label>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.MediclaimCovered, new List<SelectListItem>{
                                    new SelectListItem{ Text="Yes", Value="Yes"},
                                    new SelectListItem{ Text="No", Value="No"}
                                }, "Choose One", new { @class = "form-control select2", @id = "ddlMediclaim" })
                </div>
            </div>
            <div class="form-group">
                <label for="Birth Place">Birth Place</label>
                @Html.EditorFor(model => model.BirthPlace, new { htmlAttributes = new { @class = "form-control", @placeholder = "Birth Place", @id = "txtBirth_Place" } })
            </div>
            <div class="form-group">
                <label for="Contact Number">Contact Number</label>
                @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact Number", @id = "txtContact_Number" } })
            </div>
        </div>
    </div>
</form>