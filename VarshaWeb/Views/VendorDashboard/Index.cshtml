@using VarshaWeb.Models.EmployeeManagement;

@{
    ViewBag.Title = "VendorDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Internal Data table css -->
<link href="~/assets/plugins/datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/assets/plugins/datatable/css/buttons.bootstrap4.min.css" rel="stylesheet">
<link href="~/assets/plugins/datatable/css/responsive.bootstrap4.min.css" rel="stylesheet" />
<link href="~/assets/plugins/datatable/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="~/assets/plugins/datatable/css/responsive.dataTables.min.css" rel="stylesheet">
<link href="~/assets/plugins/select2/css/select2.min.css" rel="stylesheet">

<!--- Style css-->
<link href="~/assets/css/style.css" rel="stylesheet">
<link href="~/assets/css/style-dark.css" rel="stylesheet">
<!-- breadcrumb -->
<!-- row -->

<div class="breadcrumb-header justify-content-between">
    <div class="my-auto">
        <div class="d-flex">
            <h4 class="content-title mb-0 my-auto">Employee Managment</h4><span class="text-muted mt-1 tx-13 ml-2 mb-0">/Vendor Master Dashboard</span>
        </div>
    </div>
</div>
<!-- breadcrumb -->
<!-- row -->

<div class="row" ng-app="EmployeeApp" ng-controller="EmployeeController">
    <div class="col-xl-12 col-lg-12">
        <!--Dashboard Code start-->
        <div class="card mg-b-20">
            <div class="custom-card">
                <div class="card-body">
                    <div class=" row-sm text-center">
                        <div class="col-sm-6 col-md-2 mg-t-10 float-right">
                            <button class="btn btn-info btn-block" ng-click="addVendor()">Add Vendor</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table id="vendortable" class="table key-buttons text-md-nowrap">
                        <thead>
                            <tr>
                                <th class="border-bottom-0">Company</th>
                                <th class="border-bottom-0">Vendor Name</th>
                                <th class="border-bottom-0">Mobile No</th>
                                <th class="border-bottom-0">Email ID</th>
                                <th class="border-bottom-0">Designation</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (ViewBag.vendorInfo != null)
                            {
                                foreach (Emp_VendorMasterDetailsModel vendordetail in (List<Emp_VendorMasterDetailsModel>)ViewBag.vendorInfo)
                                {
                                    <tr>
                                        <td>@vendordetail.VendorCompany</td>
                                        <td>@vendordetail.VendorName</td>
                                        <td>@vendordetail.VendorContact</td>
                                        <td>@vendordetail.VendormailID</td>
                                        <td>@vendordetail.Designation</td>
                                        <td>
                                            <div class="btn-icon-list">
                                                <button class="btn btn-primary btn-icon" onclick="EditVendor(@vendordetail.ID)"><i class="far fa-edit"></i></button>
                                                <button class="btn btn-info btn-icon" onclick="ViewVendor(@vendordetail.ID)"><i class="far fa-eye"></i></button>
                                            </div>
                                        </td>
                                    </tr>

                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--Dashboard Code End-->
    </div>
</div>
@section scripts {
    <!--Dashboard Code End-->
    <!-- Internal Data tables -->

    <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/js/responsive.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jquery.dataTables.js"></script>


    <script src="~/assets/plugins/datatable/js/dataTables.bootstrap4.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/assets/plugins/datatable/js/pdfmake.min.js"></script>
    <script src="~/assets/plugins/datatable/js/vfs_fonts.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.colVis.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/js/responsive.bootstrap4.min.js"></script>


    <!--Internal  Datatable js -->
    <script src="../assets/js/table-data.js"></script>

    <script type="text/javascript">

        function EditVendor(vendorid) {

            document.cookie = "EditVendorID=" + vendorid;

            Pageredirect("/VendorDashboard/EditVendorDetail");

        }

        function ViewVendor(CurrentID) {

            document.cookie = "ViewVendorID=" + CurrentID;

            Pageredirect("/VendorDashboard/VendorDetails");

        }
        $('#vendortable').DataTable({

            responsive: true,
            language: {
                searchPlaceholder: 'Search',
                sSearch: '',
                lengthMenu: '_MENU_ ',
            }
        });

    </script>




}